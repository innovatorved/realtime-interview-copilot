{
  "name": "realtime-interview-copilot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "next dev --experimental-https",
    "build": "next build",
    "build:static": "next build && next export",
    "start": "next start",
    "lint": "eslint .",
    "fix": "npx @biomejs/biome format --write .",
    "build:electron": "node scripts/build-electron.js",
    "electron:dev": "pnpm run build:electron && concurrently \"PORT=3000 pnpm run dev\" \"wait-on http://localhost:3000 && DEV_PORT=3000 npx --yes electron@latest .\"",
    "electron:debug": "ELECTRON_DEBUG=true pnpm run build:electron && concurrently \"PORT=3000 pnpm run dev\" \"wait-on http://localhost:3000 && DEV_PORT=3000 npx --yes electron@latest .\"",
    "electron:build": "pnpm run build:electron && pnpm run build && npx electron-builder",
    "electron:start": "pnpm run build:electron && npx --yes electron@latest .",
    "clean": "rm -rf .next out dist electron/*.js electron/*.js.map"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.2",
    "@next/third-parties": "^16.0.10",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@uidotdev/usehooks": "^2.4.1",
    "ai": "^5.0.113",
    "better-auth": "^1.4.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.546.0",
    "next": "^16.0.10",
    "posthog-js": "^1.318.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/eslintrc": "^3.3.3",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "baseline-browser-mapping": "^2.9.7",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^15.5.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wait-on": "^7.2.0",
    "wrangler": "^4.54.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.realtime.interview.copilot.nightly",
    "productName": "Realtime Interview Copilot Nightly",
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icons/android-chrome-512x512.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "public/icons/favicon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "public/icons/android-chrome-512x512.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
