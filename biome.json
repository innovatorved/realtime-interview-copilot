{
  "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
  "files": {
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!.next",
      "!.open-next",
      "!node_modules",
      "!.vercel",
      "!.wrangler",
      "!.github"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "quoteProperties": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
